<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', { title: 'Error' }) %>
<body class="bg-gray-50 dark:bg-gray-900" x-data="{ darkMode: localStorage.getItem('darkMode') === 'true' }" :class="{ 'dark': darkMode }">
    <%- include('partials/nav', { path: '', user: locals.user }) %>

    <div class="min-h-[80vh] flex items-center justify-center">
        <div class="max-w-md w-full px-6">
            <div class="text-center">
                <!-- Error Icon -->
                <div class="mx-auto flex items-center justify-center h-24 w-24 rounded-full bg-red-100 dark:bg-red-900">
                    <i class="fas fa-exclamation-triangle text-4xl text-red-600 dark:text-red-400"></i>
                </div>

                <!-- Error Message -->
                <h2 class="mt-6 text-3xl font-extrabold text-gray-900 dark:text-white">
                    <%= typeof statusCode !== 'undefined' ? `Error ${statusCode}` : 'Error' %>
                </h2>
                <p class="mt-2 text-base text-gray-500 dark:text-gray-400">
                    <%= typeof message !== 'undefined' ? message : 'An unexpected error occurred' %>
                </p>

                <!-- Error Details -->
                <% if (typeof error !== 'undefined' && process.env.NODE_ENV !== 'production') { %>
                    <div class="mt-4 p-4 bg-gray-100 dark:bg-gray-800 rounded-lg text-left">
                        <pre class="text-sm text-gray-700 dark:text-gray-300 whitespace-pre-wrap"><%= error.stack %></pre>
                    </div>
                <% } %>

                <!-- Back Button -->
                <div class="mt-8">
                    <button 
                        onclick="window.history.back()"
                        class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500"
                    >
                        <i class="fas fa-arrow-left mr-2"></i>
                        Go Back
                    </button>
                </div>

                <!-- Home Link -->
                <div class="mt-4">
                    <a 
                        href="/dashboard"
                        class="text-sm font-medium text-green-600 hover:text-green-500 dark:text-green-400 dark:hover:text-green-300"
                    >
                        Or go to Dashboard
                        <i class="fas fa-arrow-right ml-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
